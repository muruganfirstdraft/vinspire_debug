<div class="page-header">
  <h1>
    Moods
    <a href="/moods/new" class="btn btn-lg btn-success">New Mood</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Mood choice</th>
        <th>Actions</th>
      </tr>

      <% @moods.each do |mood| %>
      <tr>
        <td><%= mood.mood_choice %></td>
        <td>
          <a href="/moods/<%= mood.id %>" class="btn btn-primary">Show</a>
          <a href="/moods/<%= mood.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_mood/<%= mood.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @moods, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
