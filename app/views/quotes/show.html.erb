<div class="page-header">
  <h3>Quote #<%= @quote.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Body</dt>
      <dd><%= @quote.body %></dd>

      <dt>Author</dt>
      <dd><%= @quote.author %></dd>

      <dt>Mood</dt>
      <dd><%= @quote.mood_id %></dd>

      <dt>Quote type</dt>
      <dd><%= @quote.quote_type %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/quotes" class="btn btn-primary">
        Back
      </a>
      <a href="/quotes/<%= @quote.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_quote/<%= @quote.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
