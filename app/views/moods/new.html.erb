<!-- Validation failure messages -->
<% if @mood.errors.any? %>
  <% @mood.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Mood</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_mood" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for mood_choice -->
      <div class="form-group">
        <label for="mood_choice" class="control-label">
          Mood choice
        </label>

        <input type="text" id="mood_choice" name="mood_choice" placeholder="Mood choice" class="form-control" value="<%= @mood.mood_choice %>">
      </div>

      <button class="btn btn-success">
        Create Mood
      </button>
      or
      <a href="/moods">Cancel</a>
    </form>
  </div>
</div>
